<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.marcelje.hackernews.model.Item" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.marcelje.hackernews.screen.news.details.NewsDetailsActivityFragment"
            tools:showIn="@layout/activity_news_details">

            <include
                layout="@layout/item_news"
                app:item="@{item}" />

            <include
                layout="@layout/section_news_details"
                app:item="@{item}" />

            <include
                android:id="@+id/section_comment_list"
                layout="@layout/section_comment_list"
                app:item="@{item}" />
        </LinearLayout>
    </ScrollView>

</layout>