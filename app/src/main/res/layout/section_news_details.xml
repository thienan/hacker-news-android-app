<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.marcelljee.hackernews.viewmodel.SectionNewsDetailsViewModel" />

        <variable
            name="text"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin"
        android:orientation="vertical"
        android:visibility="@{viewModel.isViewVisible(text)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:text="@string/label_details"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_radius">

            <TextView
                android:id="@+id/tv_news_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="end"
                android:maxLines="5"
                android:onClick="@{() -> viewModel.textDetailsClick(text)}"
                android:padding="@dimen/view_margin"
                android:text='@{viewModel.getStyledText(text)}'
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
