<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.text.Html" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="com.marcelje.hackernews.utils.ItemUtils" />

        <variable
            name="itemTextDetailsClickHandlers"
            type="com.marcelje.hackernews.handlers.ItemTextDetailsClickHandlers" />

        <variable
            name="activity"
            type="com.marcelje.hackernews.activity.ToolbarActivity" />

        <variable
            name="text"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin"
        android:orientation="vertical"
        android:visibility="@{TextUtils.isEmpty(text) ? View.GONE : View.VISIBLE}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:text="@string/label_details"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_radius">

            <TextView
                android:id="@+id/tv_news_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="end"
                android:maxLines="5"
                android:onClick="@{() -> itemTextDetailsClickHandlers.onClick(text)}"
                android:padding="@dimen/view_margin"
                android:text='@{ItemUtils.fromHtml(activity, text)}'
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
