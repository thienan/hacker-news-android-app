<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.marcelje.hackernews.utils.ItemUtils" />

        <variable
            name="item"
            type="com.marcelje.hackernews.model.Item" />

        <variable
            name="itemUserClickHandlers"
            type="com.marcelje.hackernews.handlers.ItemUserClickHandlers" />

        <variable
            name="itemTextClickHandlers"
            type="com.marcelje.hackernews.handlers.ItemTextClickHandlers" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/view_margin"
            android:paddingRight="@dimen/view_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> itemUserClickHandlers.onClick(item.by)}"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="@dimen/view_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:text="@{item.by}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ItemUtils.getRelativeDate(context, item)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> itemTextClickHandlers.onClick(item)}"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@{ItemUtils.getTitle(context, item)}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/view_margin"
                android:paddingTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:text="@{@plurals/total_scores(item.score, item.score)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@plurals/total_comments(item.descendants, item.descendants)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:visibility="@{item.descendants > 0 ? View.VISIBLE : View.GONE}" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>