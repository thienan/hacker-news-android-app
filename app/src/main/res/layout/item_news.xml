<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="co.marcelje.hackernews.utils.ItemUtils" />

        <import type="co.marcelje.hackernews.database.DatabaseDao" />

        <variable
            name="activity"
            type="android.app.Activity" />

        <variable
            name="showReadIndicator"
            type="Boolean" />

        <variable
            name="item"
            type="co.marcelje.hackernews.model.Item" />

        <variable
            name="itemUserClickHandlers"
            type="co.marcelje.hackernews.handlers.ItemUserClickHandlers" />

        <variable
            name="itemTextClickHandlers"
            type="co.marcelje.hackernews.handlers.ItemTextClickHandlers" />

        <variable
            name="itemBookmarkClickHandlers"
            type="co.marcelje.hackernews.handlers.ItemBookmarkClickHandlers" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/text_spacing"
            android:paddingTop="@dimen/text_spacing"
            android:visibility="@{item.deleted || item.dead ? View.GONE : View.VISIBLE}">

            <co.marcelje.hackernews.view.ScoreView
                android:layout_width="@dimen/score_size"
                android:layout_height="@dimen/score_size"
                android:layout_margin="@dimen/view_margin"
                android:text="@{String.valueOf(item.score)}"
                app:read="@{showReadIndicator ? DatabaseDao.isItemRead(context, item.id) : false}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{() -> itemUserClickHandlers.onClick(item.by)}"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/text_spacing"
                    android:paddingEnd="@dimen/view_margin"
                    android:paddingStart="@dimen/view_margin"
                    android:paddingTop="@dimen/text_spacing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/view_margin"
                        android:layout_marginRight="@dimen/view_margin"
                        android:text="@{item.by}"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ItemUtils.getRelativeDate(context, item)}"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{() -> itemTextClickHandlers.onClick(item)}"
                    android:paddingBottom="@dimen/text_spacing"
                    android:paddingEnd="@dimen/view_margin"
                    android:paddingStart="@dimen/view_margin"
                    android:paddingTop="@dimen/text_spacing"
                    android:text="@{ItemUtils.getTitle(context, item)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/text_spacing"
                    android:paddingEnd="@dimen/view_margin"
                    android:paddingStart="@dimen/view_margin"
                    android:paddingTop="@dimen/text_spacing"
                    android:text="@{@plurals/total_comments(item.descendants, item.descendants)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:visibility="@{item.descendants > 0 ? View.VISIBLE : View.GONE}" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/desc_bookmark"
                android:onClick="@{(v) -> itemBookmarkClickHandlers.onClick(v, item)}"
                android:padding="@dimen/view_margin"
                android:src="@{DatabaseDao.isItemBookmarked(activity, item.getId) ? @drawable/ic_bookmark : @drawable/ic_bookmark_border}"
                android:tint="@color/colorIcons" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_margin"
            android:text="@string/text_deleted"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{item.deleted ? View.VISIBLE : View.GONE}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_margin"
            android:text="@string/text_dead"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{item.dead &amp;&amp; !item.deleted ? View.VISIBLE : View.GONE}" />

    </FrameLayout>
</layout>