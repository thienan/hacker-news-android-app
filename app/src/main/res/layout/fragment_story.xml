<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.marcelljee.hackernews.activity.ToolbarActivity" />

        <variable
            name="item"
            type="com.marcelljee.hackernews.model.Item" />

        <variable
            name="itemUserClickHandlers"
            type="com.marcelljee.hackernews.handlers.ItemUserClickHandlers" />

        <variable
            name="itemTextClickHandlers"
            type="com.marcelljee.hackernews.handlers.ItemTextClickHandlers" />

        <variable
            name="itemBookmarkClickHandlers"
            type="com.marcelljee.hackernews.handlers.ItemBookmarkClickHandlers" />

        <variable
            name="itemTextDetailsClickHandlers"
            type="com.marcelljee.hackernews.handlers.ItemTextDetailsClickHandlers" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/section_news"
            layout="@layout/section_news"
            app:activity="@{activity}"
            app:item="@{item}"
            app:itemTextClickHandlers="@{itemTextClickHandlers}"
            app:itemUserClickHandlers="@{itemUserClickHandlers}"
            app:itemBookmarkClickHandlers="@{itemBookmarkClickHandlers}"/>

        <include
            android:id="@+id/section_news_details"
            layout="@layout/section_news_details"
            app:activity="@{activity}"
            app:itemTextDetailsClickHandlers="@{itemTextDetailsClickHandlers}"
            app:text="@{item.text}" />

        <include
            android:id="@+id/section_poll_options"
            layout="@layout/section_poll_options"
            android:visibility="@{item.parts.size() > 0 ? View.VISIBLE : View.GONE}" />
    </LinearLayout>
</layout>