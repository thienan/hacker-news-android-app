<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.marcelljee.hackernews.viewmodel.ItemCommentViewModel" />

        <variable
            name="item"
            type="com.marcelljee.hackernews.model.Item" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{viewModel.isItemViewVisible(item)}">

            <LinearLayout
                android:id="@+id/layout_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> viewModel.userClick(item.by)}"
                android:orientation="horizontal"
                android:padding="@dimen/view_margin">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin"
                    android:text="@{item.by}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.getRelativeDate(item)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            </LinearLayout>

            <com.marcelljee.hackernews.view.LinkifiedTextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="10"
                android:padding="@dimen/view_margin"
                android:text='@{viewModel.getStyledText(item)}'
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_kids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_margin"
                android:text="@{@plurals/total_replies(item.kids.size, item.kids.size)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_margin"
            android:text="@string/text_deleted"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{viewModel.isDeletedViewVisible(item)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_margin"
            android:text="@string/text_dead"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{viewModel.isDeadViewVisible(item)}" />
    </FrameLayout>
</layout>
