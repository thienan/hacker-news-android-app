<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="co.marcelje.hackernews.utils.ItemUtils" />

        <variable
            name="item"
            type="co.marcelje.hackernews.model.Item" />

        <variable
            name="itemUserClickHandlers"
            type="co.marcelje.hackernews.handlers.ItemUserClickHandlers" />

        <variable
            name="activity"
            type="co.marcelje.hackernews.activity.ToolbarActivity" />

        <variable
            name="itemParentName"
            type="String" />

        <variable
            name="itemPosterName"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:text="@{ItemUtils.getCommentInfo(activity, itemParentName, itemPosterName)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{TextUtils.isEmpty(itemParentName) &amp;&amp; TextUtils.isEmpty(itemPosterName) ? View.GONE : View.VISIBLE}" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:elevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_radius">

            <include
                android:id="@+id/comment_head"
                layout="@layout/item_comment"
                app:activity="@{activity}"
                app:item="@{item}"
                app:itemUserClickHandlers="@{itemUserClickHandlers}" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>

