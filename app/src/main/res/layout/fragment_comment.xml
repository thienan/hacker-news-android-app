<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.marcelljee.hackernews.viewmodel.FragmentCommentViewModel" />

        <variable
            name="item"
            type="com.marcelljee.hackernews.model.Item" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:text="@{viewModel.getCommentInfo()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:visibility="@{viewModel.isCommentInfoViewVisible()}" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:elevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_radius">

            <include
                android:id="@+id/comment_head"
                layout="@layout/item_comment"
                app:item="@{item}" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>

