<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcelje.hackernews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HackerNewsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ToolbarActivity" />
        <activity android:name=".activity.WebToolbarActivity" />
        <activity
            android:name=".screen.news.NewsActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.news.item.text.DetailsTextActivity"
            android:label="@string/title_activity_details_text"
            android:parentActivityName=".screen.news.item.ItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marcelje.hackernews.screen.news.item.ItemActivity" />
        </activity>
        <activity
            android:name=".screen.user.UserActivity"
            android:parentActivityName=".screen.news.NewsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marcelje.hackernews.screen.news.NewsActivity" />
        </activity>
        <activity
            android:name=".screen.web.WebActivity"
            android:label="@string/title_activity_web"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".screen.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".screen.news.NewsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marcelje.hackernews.screen.news.NewsActivity" />
        </activity>

        <receiver
            android:name=".receiver.CopyReceiver"
            android:exported="false" />

        <provider
            android:name=".database.HackerNewsContentProvider"
            android:authorities="com.marcelje.hackernews.database.AUTHORITY"
            android:exported="false" />

        <activity
            android:name=".screen.news.item.ItemActivity"
            android:parentActivityName=".screen.news.NewsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marcelje.hackernews.screen.news.NewsActivity" />
        </activity>
    </application>

</manifest>